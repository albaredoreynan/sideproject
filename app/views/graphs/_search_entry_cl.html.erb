<div class="panel panel-primary">
  	<div class="panel-primary panel-heading">Search</div>
	  <div class="row">
	    <div class="span11">
		    <%= form_for search_entry_other_graph2_path, :method => 'get' do %>
			<table class="table" width="100%">
			  <thead>		
				<tr>
					<td>Client :</td>
					<td colspan='3'>
						<%= autocomplete_field_tag :client, nil, ac_client_gr_graphs_path, :required => true, :style => "width: 90%;" %>
					</td>
					<!-- <td>Case Title:</td>
					<td>
						<%#= select_tag :file_matter_id, nil, prompt: "Select from List", id: "cases" %>
						
					</td> -->
				</tr>
				<tr>
					<td width="10%">Year :</td>
					<td width="10%">
						<%= select_tag :year, options_for_select(['2000','2001','2002','2003','2004','2005','2006','2007','2008','2009','2010','2011','2012','2013','2014','2015','2016','2017'], :selected => Date.today.year), :style => "width: 100%;" %>
					</td>
					<td width="10%">Month/s: </td>	
					<td width="70%">
						<%= select_tag :month, options_for_select(['January','February','March','April','May','June','July','August','September','October','November','December']), { "data-placeholder" => "", :multiple => true, id: 'chosen-select2', :include_blank => true, :style => "width: 100%;"} %>
						<%= hidden_field_tag :pfr, 3%>
					</td>
				</tr>

				<!-- <tr>
					<td>Date From: </td>	
					<td>
						<%#= text_field_tag :beginning_date, nil,  :id => "datepicker_beg"%>
					</td>
					<td>Date To: </td>	
					<td>
						<%#= text_field_tag :ending_date, nil,  :id => "datepicker_end"%>
						
					</td>
				</tr> -->
				<tr><td colspan="4"><div class="pull-right">
					    <%= submit_tag "Search" %>
				</div></td></tr>
			  </thead>		
			</table>
		<% end %>
    	</div>
  	</div>
  </div>
<script>
	$("#chosen-select2").chosen();
  $('#datepicker_beg').datepicker({format: 'yyyy-mm-dd'});
  $('#datepicker_end').datepicker({format: 'yyyy-mm-dd'});
  $(document).ready(function(){
      $('#client').blur(function(){
        $.ajax({
          url: "<%= update_cases_path %>",
          data: {
            client : $('#client').val()
          },
          dataType: "script"
          // success: function(data){
          //   console.log(data);
          // }
        });
      });
    }); 
</script>