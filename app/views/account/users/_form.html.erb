<%= simple_form_for [:account, @user ], :html => { :class => 'form-horizontal' } do |f| %>
<%#= simple_form_for(@user, :url => account_users_path(@user)) do |f| %>
  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :username, :required => true, :autofocus => true %>
    <%= f.input :role, :collection => [ "Administrator", "User", "Billing Clerk", "Encoder-Call", "Encoder-Print", "Front Desk"] , :label =>  "Role" , :include_blank => false, :required => true  %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
  </div>

  <br/>
	  <div class="pull left">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>



