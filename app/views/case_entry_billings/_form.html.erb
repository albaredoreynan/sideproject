<%= simple_form_for @case_entry_billing, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.label :file_reference_code, "File Reference Code" %>
  <%= f.text_field :file_reference_code, :value => params[:file_matter_id], :required => true %>
  <%= f.label :cover_period_start, "Cover Period Start" %>
  <%= f.text_field :cover_period_start, :value => params[:beginning_date], :id => 'datepicker1', :required => true %>
  <%= f.label :cover_period_end, "Cover Period End" %>
  <%= f.text_field :cover_period_end, :value => params[:ending_date], :id => 'datepicker2', :required => true %>
  <%= f.label :billing_date, "Billing Date" %>
  <%= f.text_field :billing_date, :label => 'Biling Date', :id => 'datepicker3' %>
  <%= f.input :biliing_status, :collection => [ "Completed", "Pending"] , :label =>  "Status" , :include_blank => false, :required => true  %>
  <%#= f.input :position, :include_blank => false, :required => true  %>
  <%= f.input :or_number, :label => 'OR Number' %>
  <%= f.input :invoice_number, :label => 'Invoice Number' %>
  <%= f.hidden_field :client_id, :value => params[:cid] %>
  <%= f.hidden_field :file_matter_id, :value => params[:fmi] %>
  <br/>
  <div class="pull left">
    <%= f.button :submit, 'Submit', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lawyers_path, :class => 'btn' %>
  </div>
<% end %>
<script>

  $(function() {
      $('#datepicker1').datepicker({format: 'yyyy-mm-dd'});
      $('#datepicker2').datepicker({format: 'yyyy-mm-dd'});
      $('#datepicker3').datepicker({format: 'yyyy-mm-dd'});
  });
</script>