<%- model_class = Lawyer -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
</div>
<div class="row">
  <div class="span12 well">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th><%= model_class.human_attribute_name(:mobile_number) %></th>
          <th><%= model_class.human_attribute_name(:position) %></th>
          <th><%= model_class.human_attribute_name(:email) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @lawyers.each do |lawyer| %>
          <tr>
            <td><%= lawyer.first_name+" "+lawyer.middle_name+" "+lawyer.last_name %> </td>
            <td><%= lawyer.mobile_number %></td>
            <td><%= lawyer.position %></td>
            <td><%= lawyer.email %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_lawyer_path(lawyer), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          lawyer_path(lawyer),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lawyer_path,
            :class => 'btn btn-primary' %>
