<%= simple_form_for @lawyer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :first_name %>
  <%= f.input :middle_name %>
  <%= f.input :last_name %>
  <%= f.input :position, :collection => [ "Partner", "Senior Partner", "Junior Partner", "Senior Associate", "Junior Associate"] , :label =>  "Position" , :include_blank => false  %>
  <%= f.input :mobile_number %>
  <%= f.input :email %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lawyers_path, :class => 'btn' %>
  </div>
<% end %>
