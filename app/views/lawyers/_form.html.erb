<%= simple_form_for @lawyer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :first_name, :label => 'First Name', :required => true %>
  <%= f.input :middle_name, :label => 'Middle Name', :required => true %>
  <%= f.input :last_name, :label => 'Last Name', :required => true %>
  <%= f.input :initials, :label => 'Initial' %>
  <%#= f.input :position, :collection => [ "Partner", "Senior Partner", "Senior Associate", "Associate"] , :label =>  "Position" , :include_blank => false, :required => true  %>
  <%= f.input :position, :include_blank => false, :required => true  %>
  <%= f.input :mobile_number, :label => 'Mobile Number' %>
  <%= f.input :email, :label => 'Email Address' %>
  <%= f.input :rate, :label => 'Peso Rate', :required => true %>
  <%= f.input :dollar_rate, :label => 'Dollar Rate' %>
  <br/> 
  <div class="pull left">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lawyers_path, :class => 'btn' %>
  </div>
<% end %>
