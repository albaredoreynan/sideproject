<%= simple_form_for @lawyer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :first_name, :label => 'First Name' %>
  <%= f.input :middle_name, :label => 'Middle Name' %>
  <%= f.input :last_name, :label => 'Last Name' %>
  <%= f.input :initials, :label => 'Initial' %>
  <%= f.input :position, :collection => [ "Partner", "Senior Partner", "Junior Partner", "Senior Associate", "Associate"] , :label =>  "Position" , :include_blank => false  %>
  <%= f.input :mobile_number, :label => 'Mobile Number' %>
  <%= f.input :email, :label => 'Email Address' %>
  <%= f.input :rate, :label => 'Rate' %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lawyers_path, :class => 'btn' %>
  </div>
<% end %>
