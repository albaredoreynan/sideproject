<% @arr = Array.new %>
<% @arr2 = Array.new %>
<% @lawyers = Array.new %>
<%  if params[:date_from].nil? || params[:date_from].empty? 
      @beginning_date = Date.today.at_beginning_of_month
      @ending_date = Date.today
    else 
      @beginning_date = params[:date_from]
      @ending_date = params[:date_to]
    end
%>
<% file_matter = FileMatter.where(file_code: params[:file_ref] )%>
<% al = AssignedLawyer.where(file_matter_id: file_matter.last.id) %>
<% al.each do |lawyer| %>
   <% x = Lawyer.find(lawyer.lawyer_id) %> 
   <%# @lawyers << x.full_name %>   
   <% @arr2 << [x.full_name, calculate_time_per_filematter(lawyer.lawyer_id, @beginning_date, @ending_date, params[:file_ref]).to_f ] %>
<% end%>
<% @case_entries.each do |ca| %>

  <% @arr << ca.client_code %>
  <%# @arr << ca.lawyer_id %>
  
  <%# @arr2 << calculate_time(lawyer.id, @beginning_date, @ending_date) %>
<% end %>
<% @fileref = params[:file_ref]%>
<% @client = @case_entries.first %>
<% @client_name = Client.find(@client.client_id) %>
<script>
$(function () {
    $('#container').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: 1,//null,
            plotShadow: false
        },
        title: {
            text: 'Work Hours for Client: <%= @client_name.name %>(<%= @client_name.cl_code_txt %>)'
        },
        subtitle:{
            text: 'Period Covers: <%=raw(@beginning_date)%> - <%=raw(@ending_date)%>'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Lawyers Performance',
            data: <%= raw(@arr2) %>

            // [ 
            //     ['Firefox',   45.0],
            //     ['IE',       26.8],
            //     // ['Safari',    8.5],
            //     // ['Opera',     6.2],
            //     // ['Others',   0.7]
            // ]
        }]
    });
});
</script>
