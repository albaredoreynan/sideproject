<%= javascript_include_tag "highcharts" %>
<%= javascript_include_tag "modules/exporting" %>
<style>
  .gray-data { background-color: #5bc0de !important; color: #ffffff;" }
</style>
<div class="panel">
  <div class="panel-heading"><h3>Case Entries</h3></div>
  <%= render "filter_nav" %>
  <%= render "div_filter_by_compared_workload" %>
  <div class="panel panel-primary">
    <div class="panel-primary panel-heading">Results</div>
    <div class="row">
      <div class="span11">
        <div class="row">
          <div class="pull-right" style="padding-bottom: 20px;">
            <%#= link_to "<i class='icon-th'>&nbsp;View Per Practices</i>".html_safe, filter_by_compared_workload_path(params.merge(pfr:"4", type:"table")), class: "btn btn-xs btn-info", data: {rel: "tooltip", title: "Table", toggle: "modal"}, disabled: true %>
            <%#= link_to "<i class='icon-th'>&nbsp;View Per Total Hours Rendered</i>".html_safe, filter_by_compared_workload_path(params.merge(pfr:"4", type:"hours")), class: "btn btn-xs btn-info", data: {rel: "tooltip", title: "Table", toggle: "modal"}, disabled: true %>
            <%#= link_to "<i class='icon-th'>&nbsp;View Per Clients</i>".html_safe, filter_by_compared_workload_path(params.merge(pfr:"4", type:"clients")), class: "btn btn-xs btn-info", data: {rel: "tooltip", title: "Table", toggle: "modal"}, disabled: true %>
          </div>
          <div class="span11 well">
            <% if params[:type] == 'hours' %>
              <%= render "compared_workload_total_hours" %>
            <% elsif params[:type] == 'clients' %>
              <%= render "compared_workload_clients" %>
            <%# elsif params[:type] == 'line' %>
              <%#= render "client_code_line" %>
            <% else %>  
              <%= render "compared_workload_table" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>