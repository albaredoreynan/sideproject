<div class="row">
	<br/>
	<div class="span12">
		<div class="span1"></div>
		<div class="span4" style="background-image: url('../assets/background_user.png'); width: 760px; height: 500px">
			<div style="padding-top: 45px; padding-right: 110px;" class="pull-right">
			<h2>Sign In</h2>

			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div class="form-inputs">
			    <%= f.input :login, :required => false, :autofocus => true, :label => "Username" %>
			    <%= f.input :password, :required => false %>
			    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
			  </div>

			  <br/>
		  	  <div class="pull left">
			    <%= f.button :submit, "Sign in" %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
			</div>
		</div>
		<div class="span4"></div>
	</div>
</div>
