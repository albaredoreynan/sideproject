<div class="account-container register stacked">
  <div class="content clearfix">

    <h1>Sign Up</h1>      
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="login-fields">
        <div class="field">
          <label for="firstname">Name:</label>
          <%= f.input :name, :required => true, :autofocus => true, placeholder: "Name", input_html: {class: "form-control"} %>
        </div> <!-- /field -->

        <div class="field">
          <label for="email">Email Address:</label>
          <%= f.input :email, :required => true, placeholder: "Email", input_html: {class: "form-control"} %>
        </div> <!-- /field -->

        <div class="field">
          <label for="username">Username:</label>
          <%= f.input :username, :required => true, placeholder: "Username", input_html: {class: "form-control"} %>
        </div> <!-- /field -->

        <div class="field">
          <label for="password">Password:</label>
          <%= f.input :password, :required => true, placeholder: "Password", input_html: {class: "form-control"} %>
        </div> <!-- /field -->

        <div class="field">
          <label for="confirm_password">Confirm Password:</label>
          <%= f.input :password_confirmation, :required => true, placeholder: "Confirm Password", input_html: {class: "form-control"} %>
        </div> <!-- /field -->
        <% @lawyers = Lawyer.all %>
          <% @lawyers.each do |lawyer| %>
        <% end %> 
        <%= f.hidden_field :role, :value => 'User' %>
      </div> <!-- /login-fields -->

      <div class="login-actions">
        <%= f.button :submit, "Sign up", class: "login-action btn btn-primary" %>
      </div> <!-- .actions -->

    <% end %>
  </div> <!-- /content -->
</div>

<div class="login-extra">
  Already have an account? <%= link_to "Sign In", new_session_path(resource_name) %><br />
</div>
