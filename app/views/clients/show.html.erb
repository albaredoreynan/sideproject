<%- model_class = Client -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human %></h3>
</div>

<div class="dl-horizontal">
  <div class="span1">&nbsp;</div>
  <div class="span9">
    <span><strong>Name :</strong></span>
    <span><%= @client.name %></span><br/>
    
    <span><strong>Position :</strong></span>
    <span><%= @client.position %></span><br/>
    
    <span><strong>Contact Number :</strong></span>
    <span><%= @client.contact_number %></span><br/>
    
    <span><strong>Email :</strong></span>
    <span><%= @client.email %></span><br/>
    
    <span><strong>Contact Person :</strong></span>
    <span><%= @client.contact_person %></span><br/>
    
    <span><strong>Address :</strong></span>
    <span><%= @client.address %></span><br/>
    
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clients_path, :class => 'btn btn-primary'  %>
  <%= link_to "Next", new_client_path,
            :class => 'btn btn-primary' %>
  <%= link_to 'Edit',
              edit_client_path(@client), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  
</div>