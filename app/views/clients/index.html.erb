<%- model_class = Client -%>
<div class="page-header">
  <h3 class="text-info" ><%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
</div>
<div class="row">
  <div class="span12 well">
    <table class="table table-striped" id="clients">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:email) %></th>
          <th><%= model_class.human_attribute_name(:contact_number) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.name %></td>
            <td><%= client.email %></td>
            <td><%= client.contact_number %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_client_path(client), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          client_path(client),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_client_path,
            :class => 'btn btn-primary' %>
<script>
  $('#clients').dataTable( {
    "aoColumns": [
      { "bSearchable": true, "bSortable": true },
      { "bSearchable": true, "bSortable": true },
      { "bSearchable": true, "bSortable": true },
      { "bSearchable": false, "bSortable": false }
    ],
    "sPaginationType": "bootstrap"
  } );
</script>