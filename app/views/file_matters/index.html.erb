<%- model_class = FileMatter -%>
<div class="page-header">
  <h3>File Matters</h3>
</div>
<div class="row">
  <div class="span12 well">
    <table class="table table-striped" id="filematters">
      <thead>
        <tr>
          <th>File Code</th>
          <th>Title</th>
          <th>Case #</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @file_matters.each do |fm| %>
          <tr>
            <td><%= fm.file_code %> </td>
            <td><%= fm.title %></td>
            <td><%= fm.case_number %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_file_matter_path(fm), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          file_matter_path(fm),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'Create Entry',
            new_file_matter_path,
            :class => 'btn btn-primary' %>
<script>
  $('#filematters').dataTable( {
    "aoColumns": [
      { "bSearchable": true, "bSortable": true },
      { "bSearchable": true, "bSortable": true },
      { "bSearchable": true, "bSortable": true },
      { "bSearchable": false, "bSortable": false }
    ],
    "sPaginationType": "bootstrap"
  } );
</script>